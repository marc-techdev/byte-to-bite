<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_featured_recipes_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <!-- Recipe Card 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_featured_recipe_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recipe Image -->
            <ImageView
                android:id="@+id/iv_featured_recipe_1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="#FFF5F5F5"
                android:contentDescription="Featured recipe image 1" />

            <!-- Recipe Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Recipe Title -->
                <TextView
                    android:id="@+id/tv_featured_recipe_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Featured Card Recipe 1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Recipe Subtitle -->
                <TextView
                    android:id="@+id/tv_featured_recipe_subtitle_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Recipe Subtitle 1"
                    android:textColor="#FF757575"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Recipe Meta Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Time -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_access_time_featured"
                        app:tint="#FF757575" />

                    <TextView
                        android:id="@+id/tv_featured_cooking_time_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Cooking Time 1"
                        android:textColor="#FF757575"
                        android:textSize="12sp" />

                    <!-- Servings -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_group_featured"
                        app:tint="#FF757575" />

                    <TextView
                        android:id="@+id/tv_featured_servings_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Servings 1"
                        android:textColor="#FF757575"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- Difficulty -->
                    <TextView
                        android:id="@+id/tv_featured_difficulty_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Difficulty 1"
                        android:textColor="#FF757575"
                        android:textSize="12sp" />

                    <!-- Favorite Button -->
                    <ImageView
                        android:id="@+id/iv_featured_favorite_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_favorite_border_featured"
                        app:tint="#FFBDBDBD"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        android:contentDescription="Add to favorites" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

