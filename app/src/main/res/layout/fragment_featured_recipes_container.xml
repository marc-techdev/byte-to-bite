    <!-- Want More Recipes Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_want_more_recipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:id="@+id/layout_want_more_recipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="20dp"
            android:paddingHorizontal="16dp"
            android:minHeight="64dp">

            <!-- Recipe Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                app:cardBackgroundColor="#FFFF6B35"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_explore_recipes_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_explore_recipes_featured"
                    app:tint="@android:color/white" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_want_more_recipes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Want more recipes?"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_explore_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Explore our full collection of Filipino dishes"
                    android:textColor="#FF757575"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_arrow_right_explore"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right_featured"
                app:tint="#FFBDBDBD" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>